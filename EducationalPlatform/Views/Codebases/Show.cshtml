@model EducationalPlatform.Models.Codebases

@{
    ViewBag.Title = "Show";

}

<!-- Start Banner Area -->
<section class="banner-area relative">
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    Alien Invasion
                </h1>
                <p>
                    @Model.Description
                </p>
                <div class="link-nav">
                    <span class="box">
                        <a href="@Url.Action("Index", "Codebases")"> Codebases </a>
                        <i class="lnr lnr-arrow-right"></i>
                        <a href="@Url.Action("Show", "Codebases", new { Id = Model.Id} )"> Alien Invasion</a>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="rocket-img">
        <img src="~/Content/Images/rocket.png" alt="">
    </div>
</section>
<!-- End Banner Area -->

<!-- Start Introduction Area -->
<section class="about-area section-gap">
    <div class="container shrink">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-5 col-md-6 about-left">
                <h2>
                    Nice to see you here!
                </h2>
                <br>
                <div class="wow fadeIn" data-wow-duration="1s">
                    <p class="codebase-introduction ">
                        Hi! Welcome to our new team of developers! My name is George, I am the team leader of this project.
                        We developed a game for children but unfortunately, some bugs exist. Also, we want to expand the code to improve the users' experience.
                        We need you to understand the current codebase and respond to Trouble Report requirements as well as considering Expanding the Code.
                        Thanks for your help!
                    </p>
                </div>
            </div>
            <div class="offset-lg-2 col-lg-5 offset-md-0 col-md-12 about-right">
                <div class="wow fadeIn" data-wow-duration="2s">
                    <h3>
                        Project management:
                    </h3>
                    <br>
                    <ul>
                        <li> <b>Environment</b> - Visual Studio Code  </li>
                        <li> <b>Members</b> - 1  </li>
                        <li> <b>Programming Language</b> - Python  </li>
                        <li> <b>Technology</b> - Desktop  </li>
                        <li> <b>Difficuty</b> - Easy  </li>
                        <li> <b>Sprints</b> - 4  </li>
                        <li> <b>Time</b> - 2 hours  </li>
                        <li> <b>Version Control</b> - Github  </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Introduction Area -->

<section class="about-area section">
    <div class="container shrink codebase-step">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="section-title text-center">
                    <h1>Build your background</h1>
                    <p>
                        This is an optional section that can help you understanding the codebase and improve your experience.
                    </p>
                </div>
            </div>
        </div>

        <div class="row justify-content-center codebase-build-background">
            <ol class="ordered-list">
                <li class="li-gap">
                    <h5>Explore Python language Conventions/ Best Practices/ Design Patterns </h5>
                    <ol class="ordered-list-alpha">
                        <li> <a href="https://www.datacamp.com/community/tutorials/pep8-tutorial-python-code">https://www.datacamp.com/community/tutorials/pep8-tutorial-python-code</a> </li>
                    </ol>
                </li>
                <li class="li-gap">
                    <h5>Explore the IDE (Spyder). It will help navigate the project faster and seamless, not getting in your way.  </h5>
                    <ol class="ordered-list-alpha">
                        <li>https://www.datacamp.com/community/tutorials/pep8-tutorial-python-code </li>
                    </ol>
                </li>
                <li class="li-gap">
                    <h5>How to write Documentation? </h5>
                    <ol class="ordered-list-alpha">
                        <li>https://www.datacamp.com/community/tutorials/pep8-tutorial-python-code </li>
                    </ol>
                </li>
                <li class="li-gap">
                    <h5>What is setup.py? </h5>
                    <ol class="ordered-list-alpha">
                        <li>https://www.datacamp.com/community/tutorials/pep8-tutorial-python-code </li>
                    </ol>
                </li>
                <li class="li-gap">
                    <h5>What is .gitignore? </h5>
                    <ol class="ordered-list-alpha">
                        <li>https://www.datacamp.com/community/tutorials/pep8-tutorial-python-code </li>
                    </ol>
                </li>
            </ol>
        </div>
    </div>
</section>


